@{
    var path = Server.MapPath("/banner.txt");
    var fileImage = System.IO.File.ReadAllText(path);
    ViewBag.image = "/Images/" + fileImage;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/styleAdmin.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        html, body{
            height: 100%;
            margin: 0px;
        }

        body{
            display: flex;
            flex-direction: column;
        }

        #content{
            flex: 1;
        }
    </style>
</head>
<body style="margin-top:0px;">
    <div id="banner" style="display:flex; align-items:center;margin-bottom:5px">
        <img src=@ViewBag.image style="width:150px; height:150px;border-radius:50%"/></div>
    <div id="menu">
        <div>
            @Html.ActionLink("TRANG CHỦ", "Index", "", htmlAttributes: new { @class = "a" }) &nbsp;|&nbsp;

            @Html.ActionLink("ĐĂNG KÝ", "DangKi", "BT5",new { @class = "a" })&nbsp;|&nbsp;
            @Html.ActionLink("GỬI EMAIL", "GuiEmail", "BT5", new { @class = "a" }) &nbsp;|&nbsp;
            @Html.ActionLink("THAY ĐỔI BANNER", "ChangeBanner","BT5", new { @class = "a" })
            <hr style="margin-top:0px;" />
        </div>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer" style="margin-bottom:10px">
        <p class="mt-2" style="background-color:violet; padding-bottom:15px">Copyright &copy; @DateTime.Now.Year</p>
    </div>
</body>
</html>