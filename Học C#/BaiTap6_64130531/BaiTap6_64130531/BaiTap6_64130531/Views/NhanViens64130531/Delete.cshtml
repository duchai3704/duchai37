@model BaiTap6_64130531.Models.NhanVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";
}

<h4 style="color:red;"> Bạn có chắc chắn xóa thông tin này?</h4>
<table border="0" cellspacing="0" style="font-size:14px; margin-left:50px; border-collapse: collapse; width: 400px;">
    <tr>
        <td colspan="3" style="text-align: center; font-weight: bold; font-size: 16px; padding: 10px;">
            THÔNG TIN CHI TIẾT
        </td>
    </tr>

    <tr>
        <td rowspan="8" style="text-align: center; width: 120px;">
            <img src="/Images/@Html.DisplayFor(model => model.AnhNV)" width="100" height="100" />
        </td>
        <td>Mã nhân viên:</td>
        <td>@Html.DisplayFor(model => model.MaNV)</td>
    </tr>
    <tr>
        <td>Họ nhân viên:</td>
        <td>@Html.DisplayFor(model => model.HoNV)</td>
    </tr>
    <tr>
        <td>Tên nhân viên:</td>
        <td>@Html.DisplayFor(model => model.TenNV)</td>
    </tr>
    <tr>
        <td>Giới tính:</td>
        <td>
            @{if (Model.GioiTinh == true)
                { gtinh = "Nam"; }
                else
                { gtinh = "Nữ"; }
            }
            @gtinh
        </td>
    </tr>
    <tr>
        <td>Ngày sinh:</td>
        <td>@Html.DisplayFor(model => model.NgaySinh)</td>
    </tr>
    <tr>
        <td>Lương:</td>
        <td>@Html.DisplayFor(model => model.Luong)</td>
    </tr>
    <tr>
        <td>Địa chỉ:</td>
        <td>@Html.DisplayFor(model => model.DiaChi)</td>
    </tr>
    <tr>
        <td>Phòng ban:</td>
        <td>@Html.DisplayFor(model => model.PhongBan.TenPB)</td>
    </tr>

</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:50px;">
        <input type="submit" value="Xóa" class="btn btn-default border-dark border-2" /> |
        @Html.ActionLink("Quay lại", "Index")
    </div>
}
