                                    <button onclick="decreaseValue('sst_qty')" class="reduced items-count" type="button"
                                            style="border-radius: 50%; width: 30px; height: 30px;">
                                        <i class="lnr lnr-chevron-down"></i>
                                    </button>
                                    <input type="text" name="qty" id="sst_qty" maxlength="12" value="1" title="Quantity:"
