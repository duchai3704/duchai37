                                    <button onclick="decreaseValue('sst_size')" class="reduced items-count" type="button"
                                            style="border-radius: 50%; width: 30px; height: 30px;">
                                        <i class="lnr lnr-chevron-down"></i>
                                    </button>
                                    <input type="text" name="size" id="sst_size" maxlength="12" data-size="@ViewBag.masize"
                                           value="@ViewBag.masize" title="Size:" class="input-text qty"
                                           style="width: 50px; text-align: center;">
                                    <button onclick="increaseValue('sst_size')" class="increase items-count" type="button"
                                            style="border-radius: 50%; width: 30px; height: 30px;">
                                        <i class="lnr lnr-chevron-up"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="card_area d-flex align-items-center">
                            <a class="primary-btn" onclick="addToCart('@ViewBag.IdChitietSP')">Add to Cart</a>
