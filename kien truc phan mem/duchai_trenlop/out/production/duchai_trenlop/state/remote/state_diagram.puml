    + RemoteControl()
    + void setState(RemoteState state)
    + void powerPress()
}
interface IRemoteState{
    + void handle(RemoteControl remote)
}
class OnState implements IRemoteState{
    + void handle(RemoteControl remote)
}
class OffStatte implements IRemoteState

